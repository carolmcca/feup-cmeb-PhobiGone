<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/facts_background"
    android:gravity="center"
    tools:context=".StatsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="10sp"
        android:gravity="left"
        android:background="@color/eggShell_75"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:text="@string/select"
            android:textColor="@color/brown"
            android:textSize="25sp" />

        <Spinner
            android:id="@+id/spinnerOptions"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:width="3dp"
            android:entries="@array/options"
            android:theme="@style/spinnerTheme" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="234dp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="10sp"
            android:background="@color/eggShell_75"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/dailyHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/numHours"
                android:textColor="@color/brown"
                android:textSize="20sp" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/hoursGraph"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="234dp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="10sp"
            android:background="@color/eggShell_75"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/textLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/evolLevel"
                android:textColor="@color/brown"
                android:textSize="20sp" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/levelEvol"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp" />

        </LinearLayout>

</LinearLayout>
