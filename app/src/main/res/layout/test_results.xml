<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/facts_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".StatsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/messageToDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/border_elements2"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:padding="10sp"
            android:text="MESSAGE TO DISPLAY"
            android:textColor="@color/lightSand"
            android:textSize="25sp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/border_elements"
            android:padding="5dp">

            <TextView
                android:id="@+id/numImage"
                android:layout_width="188dp"
                android:layout_height="67dp"
                android:padding="5dp"
                android:text="Number of Images seen:"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/imageSeen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:layout_weight="0"
                android:background="@drawable/border_elements2"
                android:gravity="center"
                android:padding="10dp"
                android:text="10 Images"
                android:textColor="@color/lightSand"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/border_elements"
            android:padding="5dp">

            <TextView
                android:id="@+id/levelReached"
                android:layout_width="188dp"
                android:layout_height="67dp"
                android:padding="5dp"
                android:text="Level Reached:"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:layout_weight="0"
                android:background="@drawable/border_elements2"
                android:gravity="center"
                android:padding="10dp"
                android:text="Level 1"
                android:textColor="@color/lightSand"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/border_elements"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="188dp"
                android:layout_height="67dp"
                android:padding="5dp"
                android:text="Percentage of Images seen:"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:layout_weight="0"
                android:background="@drawable/border_elements2"
                android:gravity="center"
                android:padding="10dp"
                android:text="10 hours"
                android:textColor="@color/lightSand"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/homeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20sp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="10sp"
                android:text="@string/Home" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20sp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="10sp"
                android:text="@string/stats" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>